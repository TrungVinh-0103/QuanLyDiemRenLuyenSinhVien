@model List<QLDiemRenLuyen.Models.CauHinh.CauHinhTrangThaiSinhVien>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý cấu hình trạng thái sinh viên";
}

<link rel="stylesheet" href="~/css/CauHinhTrangThaiSinhVien.css" />

<div class="modern-container">
    <div class="container">
        <div class="content-card">
            <h4 class="page-title">👨‍🎓 QUẢN LÝ CẤU HÌNH TRẠNG THÁI SINH VIÊN</h4>

            @if (TempData["Loi"] != null)
            {
                <div class="alert alert-danger modern-alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Loi"]
                </div>
            }
            @if (TempData["ThanhCong"] != null)
            {
                <div class="alert alert-success modern-alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["ThanhCong"]
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <button class="modern-btn" data-bs-toggle="modal" data-bs-target="#modalThem">
                    <i class="fas fa-plus me-2"></i>Thêm mới
                </button>
                <div class="text-muted">
                    <i class="fas fa-users me-2"></i>Tổng: <strong>@Model.Count</strong> trạng thái
                </div>
            </div>

            <div class="table-responsive">
                <table class="table modern-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag me-2"></i>#</th>
                            <th><i class="fas fa-user-tag me-2"></i>Tên trạng thái</th>
                            <th><i class="fas fa-cogs me-2"></i>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td class="text-center"><strong>@(i + 1)</strong></td>
                                <td>
                                    <div class="student-status-badge">
                                        <i class="fas fa-circle me-2" style="font-size: 0.5rem;"></i>
                                        @Model[i].TenTrangThai
                                    </div>
                                </td>
                                <td class="text-center">
                                    <button class="action-btn btn-edit" data-bs-toggle="modal" data-bs-target="#modalSua_@Model[i].TrangThaiID" title="Chỉnh sửa">
                                        <i class="fas fa-edit me-1"></i>
                                    </button>
                                    <form method="post" asp-action="XoaTrangThaiSinhVien" asp-controller="Admin" style="display:inline;">
                                        <input type="hidden" name="id" value="@Model[i].TrangThaiID" />
                                        <button type="submit" class="action-btn btn-delete" onclick="return confirm('⚠️ Xác nhận xóa trạng thái này?')" title="Xóa">
                                            <i class="fas fa-trash me-1"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
@for (int i = 0; i < Model.Count; i++)
{
    <div class="modal fade modern-modal" id="modalSua_@Model[i].TrangThaiID" tabindex="-1">
        <div class="modal-dialog">
            <form method="post" asp-action="SuaTrangThaiSinhVien" asp-controller="Admin">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-edit me-2"></i>Sửa trạng thái sinh viên
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="TrangThaiID" value="@Model[i].TrangThaiID" />
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-user-tag me-2"></i>Tên trạng thái
                            </label>
                            <input name="TenTrangThai" class="form-control" value="@Model[i].TenTrangThai" required placeholder="Nhập tên trạng thái..." />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                        <button type="submit" class="modern-btn">
                            <i class="fas fa-save me-2"></i>Cập nhật
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

<div class="modal fade modern-modal" id="modalThem" tabindex="-1">
    <div class="modal-dialog">
        <form method="post" asp-action="ThemTrangThaiSinhVien" asp-controller="Admin">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus me-2"></i>Thêm trạng thái sinh viên
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-user-tag me-2"></i>Tên trạng thái
                        </label>
                        <input name="TenTrangThai" class="form-control" required placeholder="Nhập tên trạng thái..." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Hủy
                    </button>
                    <button type="submit" class="modern-btn">
                        <i class="fas fa-plus me-2"></i>Thêm
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.modern-alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.animation = 'slideInDown 0.5s ease reverse';
                    setTimeout(() => alert.remove(), 500);
                }, 5000);
            });
        });
    </script>
}
