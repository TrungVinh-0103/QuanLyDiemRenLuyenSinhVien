@model List<QLDiemRenLuyen.Models.CauHinh.CauHinhXepLoai>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý xếp loại rèn luyện";
}

<link rel="stylesheet" href="~/css/QuanLyCauHinhXepLoai.css" />

<div class="admin-container">
    <div class="container-fluid">
        <div class="content-card">
            <h1 class="page-title">🏆 Quản Lý Xếp Loại Rèn Luyện</h1>

            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="stats-card">
                        <div class="stats-number">@(Model?.Count ?? 0)</div>
                        <div class="text-muted">Tổng xếp loại</div>
                    </div>
                </div>
            </div>

            @if (TempData["ThanhCong"] != null)
            {
                <div class="alert alert-success-modern alert-modern">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["ThanhCong"]
                </div>
            }
            @if (TempData["Loi"] != null)
            {
                <div class="alert alert-danger-modern alert-modern">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Loi"]
                </div>
            }

            <div class="row mb-4">
                <div class="col-md-6">
                    <input type="text" class="form-control search-box" placeholder="Tìm kiếm xếp loại..." id="searchInput">
                </div>
                @* <div class="col-md-6 text-end">
                    <button class="modern-btn btn-add" data-bs-toggle="modal" data-bs-target="#modalThem">
                        <i class="fas fa-plus me-2"></i>Thêm Xếp Loại
                    </button>
                </div> *@
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning-modern alert-modern text-center">
                    <i class="fas fa-medal fa-3x mb-3"></i>
                    <h5>Không có xếp loại nào để hiển thị</h5>
                    <p>Hãy thêm xếp loại đầu tiên bằng cách nhấn nút "Thêm Xếp Loại"</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table modern-table" id="classificationTable">
                        <thead>
                            <tr>
                                <th width="8%"><i class="fas fa-hashtag me-1"></i>STT</th>
                                <th width="25%"><i class="fas fa-trophy me-1"></i>Tên xếp loại</th>
                                <th width="12%"><i class="fas fa-chart-line me-1"></i>Điểm từ</th>
                                <th width="12%"><i class="fas fa-chart-line me-1"></i>Điểm đến</th>
                                <th width="28%"><i class="fas fa-info-circle me-1"></i>Mô tả</th>
                                <th width="15%"><i class="fas fa-cogs me-1"></i>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold">@(i + 1)</span>
                                    </td>
                                    <td>
                                        <span class="badge-classification">
                                            <i class="fas fa-medal me-1" style="font-size: 0.5rem;"></i>
                                            @Model[i].TenXepLoai
                                        </span>
                                    </td>
                                    <td>
                                        <span class="score-badge">@Model[i].DiemToiThieu</span>
                                    </td>
                                    <td>
                                        <span class="score-badge">@Model[i].DiemToiDa</span>
                                    </td>
                                    <td title="@Model[i].MoTa">
                                        <small class="text-muted">@Model[i].MoTa</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="modern-btn btn-edit" data-bs-toggle="modal" data-bs-target="#modalSua_@Model[i].XepLoaiID" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            @* <form asp-action="XoaXepLoai" method="post" style="display:inline;" onsubmit="return confirm('Xác nhận xóa xếp loại này?');">
                                                <input type="hidden" name="id" value="@Model[i].XepLoaiID" />
                                                <button type="submit" class="modern-btn btn-delete" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form> *@
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade modern-modal" id="modalThem" tabindex="-1" aria-labelledby="modalThemLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ThemXepLoai" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalThemLabel">
                        <i class="fas fa-plus me-2"></i>Thêm Xếp Loại
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-trophy me-2"></i>Tên xếp loại
                        </label>
                        <input name="TenXepLoai" class="form-control modern-form-control" required placeholder="Nhập tên xếp loại..." />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-arrow-down me-2"></i>Điểm tối thiểu
                                </label>
                                <input type="number" name="DiemToiThieu" class="form-control modern-form-control" required placeholder="0" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-arrow-up me-2"></i>Điểm tối đa
                                </label>
                                <input type="number" name="DiemToiDa" class="form-control modern-form-control" required placeholder="100" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-info-circle me-2"></i>Mô tả
                        </label>
                        <textarea name="MoTa" class="form-control modern-form-control" rows="3" placeholder="Nhập mô tả xếp loại..."></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="modern-btn btn-add">
                        <i class="fas fa-save me-2"></i>Thêm
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model != null)
{
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="modal fade modern-modal" id="modalSua_@Model[i].XepLoaiID" tabindex="-1" aria-labelledby="modalSuaLabel_@Model[i].XepLoaiID" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="SuaXepLoai" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalSuaLabel_@Model[i].XepLoaiID">
                                <i class="fas fa-edit me-2"></i>Sửa Xếp Loại
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="XepLoaiID" value="@Model[i].XepLoaiID" />
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-trophy me-2"></i>Tên xếp loại
                                </label>
                                <input name="TenXepLoai" class="form-control modern-form-control" value="@Model[i].TenXepLoai" required />
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-arrow-up me-2"></i>Điểm tối thiểu
                                        </label>
                                        <input type="number" name="DiemToiThieu" class="form-control modern-form-control" value="@Model[i].DiemToiThieu" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-arrow-down me-2"></i>Điểm tối đa
                                        </label>
                                        <input type="number" name="DiemToiDa" class="form-control modern-form-control" value="@Model[i].DiemToiDa" required />
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-info-circle me-2"></i>Mô tả
                                </label>
                                <textarea name="MoTa" class="form-control modern-form-control" rows="3">@Model[i].MoTa</textarea>
                            </div>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="submit" class="modern-btn btn-edit">
                                <i class="fas fa-save me-2"></i>Cập Nhật
                            </button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fas fa-times me-2"></i>Hủy
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#classificationTable tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                    row.style.animation = 'fadeIn 0.3s ease';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Auto hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert-modern');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.opacity = '0';
                    alert.style.transform = 'translateY(-20px)';
                    setTimeout(() => alert.remove(), 300);
                }, 5000);
            });
        });

        // Form validation
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.style.borderColor = '#dc3545';
                        isValid = false;
                    } else {
                        field.style.borderColor = '#a8edea';
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                }
            });
        });
    </script>
}
