@model IEnumerable<QLDiemRenLuyen.Models.ChuNhiem>
@{
    ViewData["Title"] = "Quản lý chủ nhiệm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var nhanViens = ViewBag.NhanViens as List<NhanVien> ?? new();
    var lops = ViewBag.Lops as List<Lop> ?? new();
    var hocKys = ViewBag.HocKys as List<HocKy> ?? new();
}

<link href="~/css/QuanLyChuNhiem.css" rel="stylesheet" />

<div class="admin-container">
    <div class="container-fluid">
        <div class="content-card">
            <h1 class="page-title">Quản Lý Chủ Nhiệm Lớp</h1>

            <!-- Stats Cards -->
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="stats-card">
                        <div class="stats-number">@(Model?.Count() ?? 0)</div>
                        <div class="text-muted small">Tổng chủ nhiệm</div>
                    </div>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success-modern alert-modern">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger-modern alert-modern">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                </div>
            }

            <!-- Actions -->
            <div class="row mb-3">
                <div class="col-md-12 text-end">
                    <button class="modern-btn btn-add" data-bs-toggle="modal" data-bs-target="#modalThem">
                        <i class="fas fa-plus me-1"></i>Thêm Chủ Nhiệm
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table modern-table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Nhân viên</th>
                            <th>Lớp</th>
                            <th>Học kỳ</th>
                            <th>Ghi chú</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                    
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">
                                    <i class="fas fa-users fa-2x mb-2"></i>
                                    <div>Chưa có dữ liệu chủ nhiệm</div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            int stt = 1;
                            foreach (var cn in Model)
                            {
                                <tr>
                                    <td>@(stt++)</td>
                                    <td>
                                        <span class="badge badge-nhanvien">@(cn.NhanVien?.HoTen ?? "—")</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-lop">@(cn.Lop?.TenLop ?? "—")</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-hocky">
                                            @(cn.HocKy != null ? $"{cn.HocKy.TenHocKy} - {cn.HocKy.NamHoc}" + (cn.HocKy.NienKhoa != null ? $" | {cn.HocKy.NienKhoa.TenNienKhoa}" : "") : "—")
                                        </span>
                                    </td>
                                    <td>
                                        <small>@(cn.GhiChu ?? "Không có")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="modern-btn btn-edit" data-bs-toggle="modal" data-bs-target="#modalSua-@cn.ChuNhiemID" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form asp-action="XoaChuNhiem" method="post" class="d-inline" onsubmit="return confirm('Xác nhận xóa?')">
                                                <input type="hidden" name="id" value="@cn.ChuNhiemID" />
                                                <button class="modern-btn btn-delete" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm -->
<div class="modal fade modern-modal" id="modalThem" tabindex="-1" aria-labelledby="labelThem" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="ThemChuNhiem" method="post">
                <div class="modal-header" style="background: linear-gradient(135deg, #4CAF50, #45a049);">
                    <h5 class="modal-title" id="labelThem">
                        <i class="fas fa-user-plus me-2"></i>Thêm Chủ Nhiệm
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-user me-1"></i>Nhân viên</label>
                                <select class="form-select modern-form-control" name="NhanVienID" required>
                                    <option value="">-- Chọn nhân viên --</option>
                                    @if (nhanViens != null)
                                        @foreach (var nv in nhanViens)
                                        {
                                            <option value="@nv.NhanVienID">@nv.HoTen</option>
                                        }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-users me-1"></i>Lớp</label>
                                <select class="form-select modern-form-control" name="LopID" required>
                                    <option value="">-- Chọn lớp --</option>
                                    @if (lops != null)
                                        @foreach (var lop in lops)
                                        {
                                            <option value="@lop.LopID">@lop.TenLop</option>
                                        }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-calendar me-1"></i>Học kỳ</label>
                                <select class="form-select modern-form-control" name="HocKyID" required>
                                    <option value="">-- Chọn học kỳ --</option>
                                    @if (hocKys != null)
                                        @foreach (var hk in hocKys)
                                        {
                                            <option value="@hk.HocKyID">@hk.TenHocKy - @hk.NamHoc | @hk.NienKhoa!.TenNienKhoa</option>
                                        }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-sticky-note me-1"></i>Ghi chú</label>
                                <input type="text" name="GhiChu" class="form-control modern-form-control" placeholder="Nhập ghi chú (tùy chọn)" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                    <button class="modern-btn btn-add">
                        <i class="fas fa-save me-1"></i>Thêm
                    </button>
                    <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@if (Model != null)
{
    <!-- Modal Sửa -->
    @for (int i = 0; i < Model.Count(); i++)
    {
        var cn = Model.ToList()[i];
        <div class="modal fade modern-modal" id="modalSua-@cn.ChuNhiemID" tabindex="-1" aria-labelledby="labelSua-@cn.ChuNhiemID" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <form asp-action="SuaChuNhiem" method="post">
                        <div class="modal-header" style="background: linear-gradient(135deg, #FF9800, #F57C00);">
                            <h5 class="modal-title" id="labelSua-@cn.ChuNhiemID">
                                <i class="fas fa-edit me-2"></i>Sửa Chủ Nhiệm
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="ChuNhiemID" value="@cn.ChuNhiemID" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-user me-1"></i>Nhân viên</label>
                                        <select class="form-select modern-form-control" name="NhanVienID" required>
                                            @if (nhanViens != null)
                                                @foreach (var nv in nhanViens)
                                                {
                                                    <option value="@nv.NhanVienID" selected="@(nv.NhanVienID == cn.NhanVienID ? "selected" : null)">
                                                        @nv.HoTen
                                                    </option>
                                                }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-users me-1"></i>Lớp</label>
                                        <select class="form-select modern-form-control" name="LopID" required>
                                            @if (lops != null)
                                                @foreach (var lop in lops)
                                                {
                                                    <option value="@lop.LopID" selected="@(lop.LopID == cn.LopID ? "selected" : null)">
                                                        @lop.TenLop
                                                    </option>
                                                }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-calendar me-1"></i>Học kỳ</label>
                                        <select class="form-select modern-form-control" name="HocKyID" required>
                                            @if (hocKys != null)
                                                @foreach (var hk in hocKys)
                                                {
                                                    <option value="@hk.HocKyID" selected="@(hk.HocKyID == cn.HocKyID ? "selected" : null)">
                                                        @hk.TenHocKy - @hk.NamHoc | @hk.NienKhoa!.TenNienKhoa
                                                    </option>
                                                }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-sticky-note me-1"></i>Ghi chú</label>
                                        <input type="text" name="GhiChu" class="form-control modern-form-control" value="@cn.GhiChu" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                            <button class="modern-btn btn-edit">
                                <i class="fas fa-save me-1"></i>Cập Nhật
                            </button>
                            <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                                <i class="fas fa-times me-1"></i>Hủy
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validation
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.style.borderColor = '#dc3545';
                        isValid = false;
                    } else {
                        field.style.borderColor = '#f093fb';
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                }
            });
        });
    </script>
}
