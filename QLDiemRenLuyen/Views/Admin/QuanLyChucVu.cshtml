@model List<QLDiemRenLuyen.Models.ChucVu>
@{
    ViewData["Title"] = "Quản lý chức vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý Chức vụ</h2>

@if (TempData["ThanhCong"] != null)
{
    <div class="alert alert-success">@TempData["ThanhCong"]</div>
}
@if (TempData["Loi"] != null)
{
    <div class="alert alert-danger">@TempData["Loi"]</div>
}

<button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#modalThem">+ Thêm chức vụ</button>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Tên chức vụ</th>
            <th>Thao tác</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenChucVu</td>
                <td>
                    <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalSua_@item.ChucVuID">Sửa</button>
                    <form asp-action="XoaChucVu" method="post" style="display:inline" onsubmit="return confirm('Xác nhận xóa?');">
                        <input type="hidden" name="id" value="@item.ChucVuID" />
                        <button class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
    @for (var i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <!-- Modal Sửa -->
        <div class="modal fade" id="modalSua_@item.ChucVuID" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="SuaChucVu" method="post">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title">Sửa chức vụ</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="ChucVuID" value="@item.ChucVuID" />
                            <div class="mb-2">
                                <label>Tên chức vụ</label>
                                <input name="TenChucVu" class="form-control" value="@item.TenChucVu" required />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary">Lưu</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

<!-- Modal Thêm -->
<div class="modal fade" id="modalThem" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ThemChucVu" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Thêm chức vụ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label>Tên chức vụ</label>
                        <input name="TenChucVu" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success">Thêm</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}