@model List<QLDiemRenLuyen.Models.HocKy>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý học kỳ";
    var nienKhoas = ViewBag.NienKhoas as List<QLDiemRenLuyen.Models.NienKhoa> ?? new List<QLDiemRenLuyen.Models.NienKhoa>();
}

<div class="container mt-4">
    <h4 class="text-primary mb-3">QUẢN LÝ HỌC KỲ</h4>

    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger">@TempData["Loi"]</div>
    }
    @if (TempData["ThanhCong"] != null)
    {
        <div class="alert alert-success">@TempData["ThanhCong"]</div>
    }

    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#modalThem">Thêm học kỳ</button>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Học kỳ</th>
                <th>Năm học</th>
                <th>Niên khóa</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var hk = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@hk.TenHocKy</td>
                    <td>@hk.NamHoc</td>
                    <td>@hk.NienKhoa?.TenNienKhoa</td>
                    <td>
                        <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalSua_@hk.HocKyID">Sửa</button>
                        <form method="post" asp-action="XoaHocKy" style="display:inline;">
                            <input type="hidden" name="id" value="@hk.HocKyID" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Xác nhận xóa học kỳ?');">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @for (int i = 0; i < Model.Count; i++)
    {
        var hk = Model[i];
        <!-- Modal Sửa -->
        <div class="modal fade" id="modalSua_@hk.HocKyID" tabindex="-1">
            <div class="modal-dialog">
                <form method="post" asp-action="SuaHocKy">
                    <div class="modal-content">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title">Sửa học kỳ</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="HocKyID" value="@hk.HocKyID" />
                            <div class="mb-3">
                                <label>Học kỳ</label>
                                <input name="TenHocKy" class="form-control" value="@hk.TenHocKy" required />
                            </div>
                            <div class="mb-3">
                                <label>Năm học</label>
                                <input name="NamHoc" class="form-control" value="@hk.NamHoc" required />
                            </div>
                            <div class="mb-3">
                                <label>Niên khóa</label>
                                <select name="NienKhoaID" class="form-select" required>
                                    @foreach (var nk in nienKhoas)
                                    {
                                        <option value="@nk.NienKhoaID" selected="@(nk.NienKhoaID == hk.NienKhoaID)">@nk.TenNienKhoa</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
    
</div>

<!-- Modal Thêm -->
<div class="modal fade" id="modalThem" tabindex="-1">
    <div class="modal-dialog">
        <form method="post" asp-action="ThemHocKy">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Thêm học kỳ mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Học kỳ</label>
                        <input name="TenHocKy" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Năm học</label>
                        <input name="NamHoc" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Niên khóa</label>
                        <select name="NienKhoaID" class="form-select" required>
                            @foreach (var nk in nienKhoas)
                            {
                                <option value="@nk.NienKhoaID">@nk.TenNienKhoa</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
}
