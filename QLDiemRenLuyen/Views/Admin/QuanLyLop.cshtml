@model List<QLDiemRenLuyen.Models.Lop>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý lớp";
    var khoas = ViewBag.Khoas as List<QLDiemRenLuyen.Models.Khoa> ?? new List<QLDiemRenLuyen.Models.Khoa>();
    var nienKhoas = ViewBag.NienKhoas as List<QLDiemRenLuyen.Models.NienKhoa> ?? new List<QLDiemRenLuyen.Models.NienKhoa>();
}

<link rel="stylesheet" href="/css/QuanLyLop.css">

<div class="admin-container">
    <div class="container-fluid">
        <div class="content-card">
            <h1 class="page-title">Quản Lý Lớp</h1>

            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number">@(Model?.Count ?? 0)</div>
                        <div class="text-muted">Tổng lớp</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number">@(khoas?.Count ?? 0)</div>
                        <div class="text-muted">Khoa</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number">@(nienKhoas?.Count ?? 0)</div>
                        <div class="text-muted">Niên khóa</div>
                    </div>
                </div>
            </div>

            @if (TempData["ThanhCong"] != null)
            {
                <div class="alert alert-success-modern alert-modern">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["ThanhCong"]
                </div>
            }
            @if (TempData["Loi"] != null)
            {
                <div class="alert alert-danger-modern alert-modern">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Loi"]
                </div>
            }

            <div class="row mb-4">
                <div class="col-md-6">
                    <input type="text" class="form-control search-box" placeholder="Tìm kiếm lớp..." id="searchInput">
                </div>
                <div class="col-md-6 text-end">
                    <button class="modern-btn btn-add" data-bs-toggle="modal" data-bs-target="#modalThem">
                        <i class="fas fa-plus me-2"></i>Thêm Lớp
                    </button>
                </div>
            </div>

            @if ( Model == null || !Model.Any())
            {
                <div class="alert alert-warning-modern alert-modern text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5>Không có lớp nào để hiển thị</h5>
                    <p>Hãy thêm lớp đầu tiên bằng cách nhấn nút "Thêm Lớp"</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table modern-table" id="lopTable">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag me-2"></i>STT</th>
                                <th><i class="fas fa-users me-2"></i>Tên lớp</th>
                                <th><i class="fas fa-university me-2"></i>Khoa</th>
                                <th><i class="fas fa-calendar me-2"></i>Niên khóa</th>
                                <th><i class="fas fa-cogs me-2"></i>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var lop = Model[i];
                                <tr>
                                    <td><span class="badge bg-primary rounded-pill">@(i + 1)</span></td>
                                    <td>
                                        <span class="badge-lop">@lop.TenLop</span>
                                    </td>
                                    <td>
                                        <span class="badge-khoa">@(lop.Khoa?.TenKhoa ?? "Chưa có")</span>
                                    </td>
                                    <td>
                                        <span class="badge-nienkhoa">@(lop.NienKhoa?.TenNienKhoa ?? "Chưa có")</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="modern-btn btn-edit btn-sm" data-bs-toggle="modal" data-bs-target="#modalSua_@lop.LopID" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form method="post" asp-action="XoaLop" asp-controller="Admin" style="display:inline;" onsubmit="return confirm('Xác nhận xóa lớp?');">
                                                <input type="hidden" name="id" value="@lop.LopID" />
                                                <button type="submit" class="modern-btn btn-delete btn-sm" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade modern-modal" id="modalThem" tabindex="-1" aria-labelledby="modalThemLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="ThemLop" asp-controller="Admin">
                <div class="modal-header" style="background: linear-gradient(135deg, #4CAF50, #45a049);">
                    <h5 class="modal-title" id="modalThemLabel">
                        <i class="fas fa-plus me-2"></i>Thêm Lớp Mới
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="modern-form-group">
                        <label><i class="fas fa-users me-2"></i>Tên lớp</label>
                        <input name="TenLop" class="form-control modern-form-control" required placeholder="Nhập tên lớp" />
                    </div>
                    <div class="modern-form-group">
                        <label><i class="fas fa-university me-2"></i>Khoa</label>
                        <select name="KhoaID" class="form-select modern-form-control" required>
                            <option value="">-- Chọn khoa --</option>
                                @if (khoas != null)
                                    @foreach (var k in khoas)
                                    {
                                        <option value="@k.KhoaID">@k.TenKhoa</option>
                                    }
                        </select>
                    </div>
                    <div class="modern-form-group">
                        <label><i class="fas fa-calendar me-2"></i>Niên khóa</label>
                        <select name="NienKhoaID" class="form-select modern-form-control" required>
                            <option value="">-- Chọn niên khóa --</option>
                                @if (nienKhoas != null)
                                    @foreach (var nk in nienKhoas)
                                    {
                                        <option value="@nk.NienKhoaID">@nk.TenNienKhoa</option>
                                    }
                        </select>
                    </div>
                </div>
                <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                    <button type="submit" class="modern-btn btn-add">
                        <i class="fas fa-save me-2"></i>Thêm Lớp
                    </button>
                    <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@if (Model != null)
{
    @for (int i = 0; i < Model.Count; i++)
    {
        var lop = Model[i];
        <div class="modal fade modern-modal" id="modalSua_@lop.LopID" tabindex="-1" aria-labelledby="modalSuaLabel_@lop.LopID" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-action="SuaLop" asp-controller="Admin">
                        <div class="modal-header" style="background: linear-gradient(135deg, #FF9800, #F57C00);">
                            <h5 class="modal-title" id="modalSuaLabel_@lop.LopID">
                                <i class="fas fa-edit me-2"></i>Sửa lớp: @lop.TenLop
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="LopID" value="@lop.LopID" />
                            <div class="modern-form-group">
                                <label><i class="fas fa-users me-2"></i>Tên lớp</label>
                                <input name="TenLop" class="form-control modern-form-control" value="@lop.TenLop" required />
                            </div>
                            <div class="modern-form-group">
                                <label><i class="fas fa-university me-2"></i>Khoa</label>
                                <select name="KhoaID" class="form-select modern-form-control" required>
                                    @if (khoas != null)
                                        @foreach (var k in khoas)
                                        {
                                            <option value="@k.KhoaID" selected="@(k.KhoaID == lop.KhoaID ? "selected" : null)">@k.TenKhoa</option>
                                        }
                                </select>
                            </div>
                            <div class="modern-form-group">
                                <label><i class="fas fa-calendar me-2"></i>Niên khóa</label>
                                <select name="NienKhoaID" class="form-select modern-form-control" required>
                                    @if (nienKhoas != null)
                                        @foreach (var nk in nienKhoas)
                                        {
                                            <option value="@nk.NienKhoaID" selected="@(nk.NienKhoaID == lop.NienKhoaID ? "selected" : null)">@nk.TenNienKhoa</option>
                                        }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                            <button type="submit" class="modern-btn btn-edit">
                                <i class="fas fa-save me-2"></i>Cập Nhật
                            </button>
                            <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                                <i class="fas fa-times me-2"></i>Hủy
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#lopTable tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                    row.style.animation = 'fadeIn 0.3s ease';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Animation for table rows
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.modern-table tbody tr');
            rows.forEach((row, index) => {
                row.style.animationDelay = `${index * 0.1}s`;
                row.classList.add('animate__animated', 'animate__fadeInUp');
            });
        });

        // Form validation
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.style.borderColor = '#dc3545';
                        isValid = false;
                    } else {
                        field.style.borderColor = '#f093fb';
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                }
            });
        });
    </script>
}
