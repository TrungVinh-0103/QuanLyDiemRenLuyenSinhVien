@model List<QLDiemRenLuyen.Models.NguoiDung>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var vaiTros = ViewBag.VaiTros as List<QLDiemRenLuyen.Models.CauHinh.CauHinhVaiTro> ?? new List<QLDiemRenLuyen.Models.CauHinh.CauHinhVaiTro>();
}

<div class="container mt-3">
    <h4 class="text-danger">Quản lý người dùng</h4>

    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger">@TempData["Loi"]</div>
    }
    @if (TempData["ThanhCong"] != null)
    {
        <div class="alert alert-success">@TempData["ThanhCong"]</div>
    }

    <button class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#themModal">+ Thêm người dùng</button>

    <table class="table table-bordered">
        <thead>
            <tr class="table-warning">
                <th>STT</th>
                <th>Username</th>
                <th>Mật khẩu</th>
                <th>Vai trò</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int stt = 1;
                foreach (var nd in Model)
                {
                    <tr>
                        <td>@(stt++)</td>
                        <td>@nd.Username</td>
                        <td>@nd.PasswordHash</td>
                        <td>@nd.VaiTro?.TenVaiTro</td>
                        <td>
                            <!-- Sửa mật khẩu -->
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#modalSua_@nd.NguoiDungID">Sửa</button>
                            <!-- Xóa -->
                            <form asp-action="XoaNguoiDung" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@nd.NguoiDungID" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xác nhận xóa?')">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Modal thêm người dùng -->
<div class="modal fade" id="themModal" tabindex="-1" aria-labelledby="themLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ThemNguoiDung" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm người dùng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label>Tên đăng nhập</label>
                        <input type="text" name="Username" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label>Mật khẩu</label>
                        <input type="password" name="Password" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label>Vai trò</label>
                        <select name="VaiTroID" class="form-select" required>
                            <option value="">-- Chọn vai trò --</option>
                            @foreach (var v in vaiTros)
                            {
                                <option value="@v.VaiTroID">@v.TenVaiTro</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Thêm</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal sửa người dùng -->
@if (Model != null)
{
    @foreach (var nd in Model)
    {
        <div class="modal fade" id="modalSua_@nd.NguoiDungID" tabindex="-1" aria-labelledby="modalSuaLabel_@nd.NguoiDungID" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="CapNhatMatKhau" method="post">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title">Đổi mật khẩu: @nd.Username</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="id" value="@nd.NguoiDungID" />
                            <div class="mb-2">
                                <label>Mật khẩu mới</label>
                                <input type="password" name="Password" class="form-control" required />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
}