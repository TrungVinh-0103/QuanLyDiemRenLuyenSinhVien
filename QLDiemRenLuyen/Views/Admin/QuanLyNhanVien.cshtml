@model List<QLDiemRenLuyen.Models.NhanVien>
@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    //var chucVus = ViewBag.ChucVuList as List<QLDiemRenLuyen.Models.ChucVu> ?? new List<QLDiemRenLuyen.Models.ChucVu>();
    var vaiTros = ViewBag.VaiTroList as List<QLDiemRenLuyen.Models.CauHinh.CauHinhVaiTro> ?? new();
    var khoas = ViewBag.KhoaList as List<QLDiemRenLuyen.Models.Khoa> ?? new List<QLDiemRenLuyen.Models.Khoa>();
}

<div class="container mt-4">
    <h3 class="text-danger">Quản lý nhân viên</h3>

    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger">@TempData["Loi"]</div>
    }
    @if (TempData["ThanhCong"] != null)
    {
        <div class="alert alert-success">@TempData["ThanhCong"]</div>
    }

    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#themModal">+ Thêm nhân viên</button>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Không có nhân viên nào để hiển thị.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-warning">
                <tr>
                    <th>STT</th>
                    <th>Mã NV</th>
                    <th>Họ tên</th>
                    <th>Vai trò</th>
                    <th>Khoa</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var nv = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@nv.MaNV</td>
                        <td>@nv.HoTen</td>
                        <td>@(nv.CauHinhVaiTro?.TenVaiTro ?? "Chưa có")</td>
                        <td>@(nv.Khoa?.TenKhoa ?? "Chưa có")</td>
                        <td>
                            <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#suaModal-@nv.NhanVienID">Sửa</button>
                            <form asp-action="XoaNhanVien" asp-controller="Admin" method="post" class="d-inline" onsubmit="return confirm('Xác nhận xóa nhân viên này\u003F');">
                                <input type="hidden" name="id" value="@nv.NhanVienID" />
                                <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- Modal sửa -->
    @for (int i = 0; i < Model.Count; i++)
    {
        var nv = Model[i];
        <div class="modal fade" id="suaModal-@nv.NhanVienID" tabindex="-1" aria-labelledby="suaLabel-@nv.NhanVienID" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="SuaNhanVien" asp-controller="Admin" method="post">
                        <div class="modal-header bg-info text-white">
                            <h5 class="modal-title" id="suaLabel-@nv.NhanVienID">Sửa nhân viên: @nv.HoTen</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="NhanVienID" value="@nv.NhanVienID" />
                            <div class="mb-3">
                                <label class="form-label">Mã nhân viên</label>
                                <input type="text" name="MaNV" class="form-control" value="@nv.MaNV" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Họ tên</label>
                                <input type="text" name="HoTen" class="form-control" value="@nv.HoTen" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Khoa</label>
                                <select name="KhoaID" class="form-select">
                                    <option value="">-- Không thuộc khoa --</option>
                                    @foreach (var k in khoas)
                                    {
                                        if (k.KhoaID == nv.KhoaID)
                                        {
                                            <option value="@k.KhoaID" selected>@k.TenKhoa</option>
                                        }
                                        else
                                        {
                                            <option value="@k.KhoaID">@k.TenKhoa</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Vai trò</label>
                                <select name="VaiTroID" class="form-select" required>
                                    <option value="">-- Chọn vai trò --</option>
                                    @foreach (var cv in vaiTros)
                                    {
                                        if (cv.VaiTroID == nv.VaiTroID)
                                        {
                                            <option value="@cv.VaiTroID" selected>@cv.TenVaiTro</option>
                                        }
                                        else
                                        {
                                            <option value="@cv.VaiTroID">@cv.TenVaiTro</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success">Lưu</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

    <!-- Modal thêm -->
    <div class="modal fade" id="themModal" tabindex="-1" aria-labelledby="themLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="ThemNhanVien" asp-controller="Admin" method="post">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="themLabel">Thêm nhân viên</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Mã nhân viên</label>
                            <input type="text" name="MaNV" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Họ tên</label>
                            <input type="text" name="HoTen" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Khoa</label>
                            <select name="KhoaID" class="form-select">
                                <option value="">-- Không thuộc khoa --</option>
                                @foreach (var k in khoas)
                                {
                                    <option value="@k.KhoaID">@k.TenKhoa</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Vai trò</label>
                            <select name="VaiTroID" class="form-select" required>
                                <option value="">-- Chọn vai trò --</option>
                                @foreach (var cv in vaiTros)
                                {
                                    <option value="@cv.VaiTroID">@cv.TenVaiTro</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
            button.addEventListener('click', () => {
                console.log('Modal button clicked: ', button.getAttribute('data-bs-target'));
            });
        });
    </script>
}