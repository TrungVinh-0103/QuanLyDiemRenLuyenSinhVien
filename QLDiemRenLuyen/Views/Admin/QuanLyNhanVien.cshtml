@model List<QLDiemRenLuyen.Models.NhanVien>
@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    //var chucVus = ViewBag.ChucVuList as List<QLDiemRenLuyen.Models.ChucVu> ?? new List<QLDiemRenLuyen.Models.ChucVu>();
    var vaiTros = ViewBag.VaiTroList as List<QLDiemRenLuyen.Models.CauHinh.CauHinhVaiTro> ?? new();
    var khoas = ViewBag.KhoaList as List<QLDiemRenLuyen.Models.Khoa> ?? new List<QLDiemRenLuyen.Models.Khoa>();
}
<link rel="stylesheet" href="/css/QuanLyNhanVien.css">
<div class="admin-container">
    <div class="container-fluid">
        <div class="content-card">
            <h1 class="page-title">Quản Lý Nhân Viên</h1>

            <!-- Stats Cards -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number">@(Model?.Count ?? 0)</div>
                        <div class="text-muted small">Tổng nhân viên</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number">@(vaiTros?.Count ?? 0)</div>
                        <div class="text-muted small">Vai trò</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number">@(khoas?.Count ?? 0)</div>
                        <div class="text-muted small">Khoa</div>
                    </div>
                </div>
            </div>

            @if (TempData["ThanhCong"] != null)
            {
                <div class="alert alert-success-modern alert-modern">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["ThanhCong"]
                </div>
            }
            @if (TempData["Loi"] != null)
            {
                <div class="alert alert-danger-modern alert-modern">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Loi"]
                </div>
            }

            <!-- Search and Actions -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" class="form-control search-box" placeholder="Tìm kiếm nhân viên..." id="searchInput">
                </div>
                <div class="col-md-6 text-end">
                    <button class="modern-btn btn-add" data-bs-toggle="modal" data-bs-target="#themModal">
                        <i class="fas fa-plus me-1"></i>Thêm Nhân Viên
                    </button>
                </div>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h6>Không có nhân viên nào để hiển thị</h6>
                    <p class="small">Hãy thêm nhân viên đầu tiên bằng cách nhấn nút "Thêm Nhân Viên"</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table modern-table" id="employeesTable">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã NV</th>
                                <th>Họ tên</th>
                                <th>Vai trò</th>
                                <th>Khoa</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var nv = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <span class="badge bg-primary">@nv.MaNV</span>
                                    </td>
                                    <td>
                                        <strong>@nv.HoTen</strong>
                                    </td>
                                    <td>
                                        <span class="badge badge-vaitro">@(nv.CauHinhVaiTro?.TenVaiTro ?? "Chưa có")</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-khoa">@(nv.Khoa?.TenKhoa ?? "Chưa có")</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="modern-btn btn-edit" data-bs-toggle="modal" data-bs-target="#suaModal-@nv.NhanVienID" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form asp-action="XoaNhanVien" asp-controller="Admin" method="post" class="d-inline" onsubmit="return confirm('Xác nhận xóa nhân viên này?');">
                                                <input type="hidden" name="id" value="@nv.NhanVienID" />
                                                <button type="submit" class="modern-btn btn-delete" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal Thêm -->
<div class="modal fade modern-modal" id="themModal" tabindex="-1" aria-labelledby="themLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="ThemNhanVien" asp-controller="Admin" method="post">
                <div class="modal-header" style="background: linear-gradient(135deg, #4CAF50, #45a049);">
                    <h5 class="modal-title" id="themLabel">
                        <i class="fas fa-user-plus me-2"></i>Thêm Nhân Viên Mới
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-id-card me-1"></i>Mã nhân viên</label>
                                <input type="text" name="MaNV" class="form-control modern-form-control" required placeholder="Nhập mã nhân viên" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-user me-1"></i>Họ tên</label>
                                <input type="text" name="HoTen" class="form-control modern-form-control" required placeholder="Nhập họ và tên" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-university me-1"></i>Khoa</label>
                                <select name="KhoaID" class="form-select modern-form-control">
                                    <option value="">-- Không thuộc khoa --</option>
                                    @if (khoas != null)
                                        @foreach (var k in khoas)
                                        {
                                            <option value="@k.KhoaID">@k.TenKhoa</option>
                                        }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-user-tag me-1"></i>Vai trò</label>
                                <select name="VaiTroID" class="form-select modern-form-control" required>
                                    <option value="">-- Chọn vai trò --</option>
                                    @if (vaiTros != null)
                                        @foreach (var cv in vaiTros)
                                        {
                                           <option value="@cv.VaiTroID">@cv.TenVaiTro</option>
                                        }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                    <button type="submit" class="modern-btn btn-add">
                        <i class="fas fa-save me-1"></i>Thêm
                    </button>
                    <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model != null)
{
    <!-- Modal Sửa -->
    @for (int i = 0; i < Model.Count; i++)
    {
        var nv = Model[i];
        <div class="modal fade modern-modal" id="suaModal-@nv.NhanVienID" tabindex="-1" aria-labelledby="suaLabel-@nv.NhanVienID" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <form asp-action="SuaNhanVien" asp-controller="Admin" method="post">
                        <div class="modal-header" style="background: linear-gradient(135deg, #FF9800, #F57C00);">
                            <h5 class="modal-title" id="suaLabel-@nv.NhanVienID">
                                <i class="fas fa-edit me-2"></i>Sửa nhân viên: @nv.HoTen
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="NhanVienID" value="@nv.NhanVienID" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-id-card me-1"></i>Mã nhân viên</label>
                                        <input type="text" name="MaNV" class="form-control modern-form-control" value="@nv.MaNV" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-user me-1"></i>Họ tên</label>
                                        <input type="text" name="HoTen" class="form-control modern-form-control" value="@nv.HoTen" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-university me-1"></i>Khoa</label>
                                        <select name="KhoaID" class="form-select modern-form-control">
                                            <option value="">-- Không thuộc khoa --</option>
                                            @if (khoas != null)
                                                @foreach (var k in khoas)
                                                {
                                                    <option value="@k.KhoaID" selected="@(k.KhoaID == nv.KhoaID ? "selected" : null)">@k.TenKhoa</option>
                                                }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-user-tag me-1"></i>Vai trò</label>
                                        <select name="VaiTroID" class="form-select modern-form-control" required>
                                            <option value="">-- Chọn vai trò --</option>
                                            @if (vaiTros != null)
                                                @foreach (var cv in vaiTros)
                                                {
                                                    <option value="@cv.VaiTroID" selected="@(cv.VaiTroID == nv.VaiTroID ? "selected" : null)">@cv.TenVaiTro</option>
                                                }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                            <button type="submit" class="modern-btn btn-edit">
                                <i class="fas fa-save me-1"></i>Cập Nhật
                            </button>
                            <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                                <i class="fas fa-times me-1"></i>Hủy
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#employeesTable tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                    row.style.animation = 'fadeIn 0.3s ease';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Form validation
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.style.borderColor = '#dc3545';
                        isValid = false;
                    } else {
                        field.style.borderColor = '#667eea';
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                }
            });
        });
    </script>
}

