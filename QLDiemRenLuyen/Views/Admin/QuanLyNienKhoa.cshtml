@model List<QLDiemRenLuyen.Models.NienKhoa>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý Niên khóa";
}

<div class="container mt-4">
    <h4 class="text-primary mb-3">QUẢN LÝ NIÊN KHÓA</h4>

    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger">@TempData["Loi"]</div>
    }
    @if (TempData["ThanhCong"] != null)
    {
        <div class="alert alert-success">@TempData["ThanhCong"]</div>
    }

    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#modalThem">Thêm niên khóa</button>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên niên khóa</th>
                <th>Năm bắt đầu</th>
                <th>Năm kết thúc</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].TenNienKhoa</td>
                    <td>@Model[i].NamBatDau</td>
                    <td>@Model[i].NamKetThuc</td>
                    <td>
                        <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalSua_@Model[i].NienKhoaID">Sửa</button>
                        <form method="post" asp-action="XoaNienKhoa" style="display:inline;">
                            <input type="hidden" name="id" value="@Model[i].NienKhoaID" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Xác nhận xóa?')">Xóa</button>
                        </form>
                    </td>
                </tr>

                
            }
        </tbody>
    </table>
    @for (int i = 0; i < Model.Count; i++)
    {
        <!-- Modal Sửa -->
        <div class="modal fade" id="modalSua_@Model[i].NienKhoaID" tabindex="-1">
            <div class="modal-dialog">
                <form method="post" asp-action="SuaNienKhoa">
                    <div class="modal-content">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title">Sửa niên khóa</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="NienKhoaID" value="@Model[i].NienKhoaID" />
                            <div class="mb-3">
                                <label>Tên niên khóa</label>
                                <input name="TenNienKhoa" class="form-control" value="@Model[i].TenNienKhoa" required />
                            </div>
                            <div class="mb-3">
                                <label>Năm bắt đầu</label>
                                <input name="NamBatDau" type="number" class="form-control" value="@Model[i].NamBatDau" required />
                            </div>
                            <div class="mb-3">
                                <label>Năm kết thúc</label>
                                <input name="NamKetThuc" type="number" class="form-control" value="@Model[i].NamKetThuc" required />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
</div>

<!-- Modal Thêm -->
<div class="modal fade" id="modalThem" tabindex="-1">
    <div class="modal-dialog">
        <form method="post" asp-action="ThemNienKhoa">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Thêm niên khóa mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Tên niên khóa</label>
                        <input name="TenNienKhoa" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Năm bắt đầu</label>
                        <input name="NamBatDau" type="number" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Năm kết thúc</label>
                        <input name="NamKetThuc" type="number" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}