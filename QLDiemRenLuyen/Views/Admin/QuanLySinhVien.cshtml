@model List<QLDiemRenLuyen.Models.SinhVien>
@{
    ViewData["Title"] = "Quản lý Sinh viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var khoas = ViewBag.Khoas as List<QLDiemRenLuyen.Models.Khoa> ?? new List<QLDiemRenLuyen.Models.Khoa>();
    var lops = ViewBag.Lops as List<QLDiemRenLuyen.Models.Lop> ?? new List<QLDiemRenLuyen.Models.Lop>();
    var trangThais = ViewBag.TrangThaiSinhVien as List<QLDiemRenLuyen.Models.CauHinh.CauHinhTrangThaiSinhVien> ?? new List<QLDiemRenLuyen.Models.CauHinh.CauHinhTrangThaiSinhVien>();
}
<link rel="stylesheet" href="/css/QuanLySinhVien.css">
<div class="admin-container">
    <div class="container-fluid">
        <div class="content-card">
            <h1 class="page-title">Quản Lý Sinh Viên</h1>

            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">@(Model?.Count ?? 0)</div>
                        <div class="text-muted">Tổng sinh viên</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">@(Model?.Where(x => x.GioiTinh == "Nam").Count() ?? 0)</div>
                        <div class="text-muted">Nam</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">@(Model?.Where(x => x.GioiTinh == "Nữ").Count() ?? 0)</div>
                        <div class="text-muted">Nữ</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">@(khoas?.Count ?? 0)</div>
                        <div class="text-muted">Khoa</div>
                    </div>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success-modern alert-modern">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger-modern alert-modern">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                </div>
            }
            @if (TempData["Loi"] != null)
            {
                <div class="alert alert-danger-modern alert-modern">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Loi"]
                </div>
            }

            <div class="row mb-4">
                <div class="col-md-6">
                    <input type="text" class="form-control search-box" placeholder="Tìm kiếm sinh viên..." id="searchInput">
                </div>
                <div class="col-md-6 text-end">
                    <button class="modern-btn btn-add" data-bs-toggle="modal" data-bs-target="#modalThem">
                        <i class="fas fa-plus me-2"></i>Thêm Sinh Viên
                    </button>
                </div>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning-modern alert-modern text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5>Không có sinh viên nào để hiển thị</h5>
                    <p>Hãy thêm sinh viên đầu tiên bằng cách nhấn nút "Thêm Sinh Viên"</p>
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="table modern-table" id="studentsTable">
                        <thead>
                            <tr>
                                <th><i class="fas me-2"></i>MSSV</th>
                                <th><i class="fas me-2"></i>Họ tên</th>
                                <th><i class="fas me-2"></i>Giới tính</th>
                                <th><i class="fas me-2"></i>Ngày sinh</th>
                                <th><i class="fas me-2"></i>Nơi sinh</th>
                                <th><i class="fas me-2"></i>Lớp</th>
                                <th><i class="fas me-2"></i>Khoa</th>
                                <th><i class="fas me-2"></i>Trạng thái</th>
                                <th><i class="fas me-2"></i>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sv in Model)
                            {
                                <tr>
                                    <td title="@sv.MaSV">
                                        <span class="badge bg-primary rounded-pill">@sv.MaSV</span>
                                    </td>
                                    <td title="@sv.HoTen">
                                        <div class="text-ellipsis">
                                            <strong>@sv.HoTen</strong>
                                        </div>
                                    </td>
                                    <td title="@sv.GioiTinh">
                                        <span class="gender-badge @(sv.GioiTinh == "Nam" ? "gender-male" : "gender-female")">
                                            @sv.GioiTinh
                                        </span>
                                    </td>
                                    <td title="@(sv.NgaySinh?.ToString("dd/MM/yyyy"))">
                                        @(sv.NgaySinh?.ToString("dd/MM/yyyy"))
                                    </td>
                                    <td title="@sv.NoiSinh">
                                        <div class="text-ellipsis">@sv.NoiSinh</div>
                                    </td>
                                    <td title="@sv.Lop?.TenLop">
                                        <span class="badge badge-lop">@sv.Lop?.TenLop</span>
                                    </td>
                                    <td title="@sv.Khoa?.TenKhoa">
                                        <span class="badge badge-khoa">@sv.Khoa?.TenKhoa</span>
                                    </td>
                                    <td title="@sv.TrangThai?.TenTrangThai">
                                        <span class="badge badge-trangthai">@sv.TrangThai?.TenTrangThai</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="modern-btn btn-edit btn-sm" data-bs-toggle="modal" data-bs-target="#modalSua_@sv.SinhVienID" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form asp-action="XoaSinhVien" asp-controller="Admin" method="post" style="display:inline;" onsubmit="return confirm('Xác nhận xóa sinh viên này?');">
                                                <input type="hidden" name="id" value="@sv.SinhVienID" />
                                                <button type="submit" class="modern-btn btn-delete btn-sm" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade modern-modal" id="modalThem" tabindex="-1" aria-labelledby="modalThemLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form asp-action="ThemSinhVien" asp-controller="Admin" method="post">
                <div class="modal-header" style="background: linear-gradient(135deg, #4CAF50, #45a049);">
                    <h5 class="modal-title" id="modalThemLabel">
                        <i class="fas fa-user-plus me-2"></i>Thêm Sinh Viên Mới
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-id-card me-2"></i>MSSV</label>
                                <input name="MaSV" class="form-control modern-form-control" required placeholder="Nhập mã số sinh viên" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-user me-2"></i>Họ tên</label>
                                <input name="HoTen" class="form-control modern-form-control" required placeholder="Nhập họ và tên" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-venus-mars me-2"></i>Giới tính</label>
                                <select name="GioiTinh" class="form-select modern-form-control" required>
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-birthday-cake me-2"></i>Ngày sinh</label>
                                <input type="date" name="NgaySinh" class="form-control modern-form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-map-marker-alt me-2"></i>Nơi sinh</label>
                                <input name="NoiSinh" class="form-control modern-form-control" required placeholder="Nhập nơi sinh" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-university me-2"></i>Khoa</label>
                                <select name="KhoaID" class="form-select modern-form-control" required>
                                    <option value="">-- Chọn khoa --</option>
                                    @if (khoas != null)
                                    {
                                        @foreach (var k in khoas)
                                        {
                                            <option value="@k.KhoaID">@k.TenKhoa</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-users me-2"></i>Lớp</label>
                                <select name="LopID" class="form-select modern-form-control" required>
                                    <option value="">-- Chọn lớp --</option>
                                    @foreach (var l in lops)
                                    {
                                        <option value="@l.LopID">@l.TenLop</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-info-circle me-2"></i>Trạng thái</label>
                                <select name="TrangThaiID" class="form-select modern-form-control" required>
                                    <option value="">-- Chọn trạng thái --</option>
                                    @foreach (var t in trangThais)
                                    {
                                        <option value="@t.TrangThaiID">@t.TenTrangThai</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 20px 30px;">
                    <button type="submit" class="modern-btn btn-add">
                        <i class="fas fa-save me-2"></i>Thêm Sinh Viên
                    </button>
                    <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model != null)
{
    @foreach (var sv in Model)
    {
        <div class="modal fade modern-modal" id="modalSua_@sv.SinhVienID" tabindex="-1" aria-labelledby="modalSuaLabel_@sv.SinhVienID" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <form asp-action="SuaSinhVien" asp-controller="Admin" method="post">
                        <div class="modal-header" style="background: linear-gradient(135deg, #FF9800, #F57C00);">
                            <h5 class="modal-title" id="modalSuaLabel_@sv.SinhVienID">
                                <i class="fas fa-edit me-2"></i>Sửa thông tin: @sv.HoTen
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="SinhVienID" value="@sv.SinhVienID" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-id-card me-2"></i>MSSV</label>
                                        <input name="MaSV" class="form-control modern-form-control" value="@sv.MaSV" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-user me-2"></i>Họ tên</label>
                                        <input name="HoTen" class="form-control modern-form-control" value="@sv.HoTen" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-venus-mars me-2"></i>Giới tính</label>
                                        <select name="GioiTinh" class="form-select modern-form-control" required>
                                            <option value="Nam" selected="@(sv.GioiTinh == "Nam" ? "selected" : null)">Nam</option>
                                            <option value="Nữ" selected="@(sv.GioiTinh == "Nữ" ? "selected" : null)">Nữ</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-birthday-cake me-2"></i>Ngày sinh</label>
                                        <input type="date" name="NgaySinh" class="form-control modern-form-control" value="@sv.NgaySinh?.ToString("yyyy-MM-dd")" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-map-marker-alt me-2"></i>Nơi sinh</label>
                                        <input name="NoiSinh" class="form-control modern-form-control" value="@sv.NoiSinh" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-university me-2"></i>Khoa</label>
                                        <select name="KhoaID" class="form-select modern-form-control" required>
                                            @if (khoas != null)
                                            {
                                                @foreach (var k in khoas)
                                                {
                                                    <option value="@k.KhoaID" selected="@(k.KhoaID == sv.KhoaID ? "selected" : null)">@k.TenKhoa</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-users me-2"></i>Lớp</label>
                                        <select name="LopID" class="form-select modern-form-control" required>
                                            @foreach (var l in lops)
                                            {
                                                <option value="@l.LopID" selected="@(l.LopID == sv.LopID ? "selected" : null)">@l.TenLop</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-info-circle me-2"></i>Trạng thái</label>
                                        <select name="TrangThaiID" class="form-select modern-form-control" required>
                                            @foreach (var t in trangThais)
                                            {
                                                <option value="@t.TrangThaiID" selected="@(t.TrangThaiID == sv.TrangThaiID ? "selected" : null)">@t.TenTrangThai</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 20px 30px;">
                            <button type="submit" class="modern-btn btn-edit">
                                <i class="fas fa-save me-2"></i>Cập Nhật
                            </button>
                            <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                                <i class="fas fa-times me-2"></i>Hủy
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#studentsTable tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                    row.style.animation = 'fadeIn 0.3s ease';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Animation for table rows
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.modern-table tbody tr');
            rows.forEach((row, index) => {
                row.style.animationDelay = `${index * 0.1}s`;
                row.classList.add('animate__animated', 'animate__fadeInUp');
            });
        });

        // Enhanced modal interactions
        document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
            button.addEventListener('click', function() {
                const targetModal = document.querySelector(this.getAttribute('data-bs-target'));
                if (targetModal) {
                    targetModal.classList.add('animate__animated', 'animate__zoomIn');
                }
            });
        });

        // Form validation
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.style.borderColor = '#dc3545';
                        isValid = false;
                    } else {
                        field.style.borderColor = '#4facfe';
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                }
            });
        });
    </script>
}