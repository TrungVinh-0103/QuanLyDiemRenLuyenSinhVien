@model List<QLDiemRenLuyen.Models.CauHinh.CauHinhTrangThaiHocTap>
@{
    ViewData["Title"] = "Trạng thái học tập";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4 class="text-danger">CẤU HÌNH TRẠNG THÁI HỌC TẬP</h4>

<form method="post" asp-action="ThemTrangThai" class="row g-2 mb-3">
    <div class="col-md-4"><input name="TenTrangThai" class="form-control" placeholder="Tên trạng thái" required /></div>
    <div class="col-md-6"><input name="MoTa" class="form-control" placeholder="Mô tả" /></div>
    <div class="col-md-2"><button class="btn btn-primary w-100">Thêm</button></div>
</form>

<table class="table table-bordered">
    <thead class="table-warning">
        <tr><th>Tên</th><th>Mô tả</th><th>Thao tác</th></tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TenTrangThai</td>
                <td>@t.MoTa</td>
                <td><a class="btn btn-primary btn-sm" href="/Admin/SuaTrangThai?id=@t.TrangThaiID">Sửa</a></td>
                <td><a class="btn btn-danger btn-sm" href="/Admin/XoaTrangThai?id=@t.TrangThaiID" onclick="return confirm('Xóa?')">Xóa</a></td>
            </tr>
        }
    </tbody>
</table>
