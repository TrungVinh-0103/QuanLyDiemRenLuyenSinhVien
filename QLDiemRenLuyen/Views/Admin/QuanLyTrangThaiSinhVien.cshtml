@model List<QLDiemRenLuyen.Models.TrangThaiSinhVien>
@{
    ViewData["Title"] = "Quản lý trạng thái sinh viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var trangthai = ViewBag.trangthai as List<QLDiemRenLuyen.Models.CauHinh.CauHinhTrangThaiSinhVien> ?? new List<QLDiemRenLuyen.Models.CauHinh.CauHinhTrangThaiSinhVien>();
    var thongtin = Model ?? new List<TrangThaiSinhVien>();
}

<link rel="stylesheet" href="~/css/QuanLyTrangThaiSinhVien.css" />

<div class="admin-container">
    <div class="container-fluid">
        <div class="content-card">
            <h1 class="page-title">Lịch Sử Trạng Thái Sinh Viên</h1>

            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">@(thongtin?.Count ?? 0)</div>
                        <div class="text-muted">Tổng lịch sử</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">@(trangthai?.Count ?? 0)</div>
                        <div class="text-muted">Loại trạng thái</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">@(thongtin?.Where(x => x.NgayCapNhat.Date == DateTime.Today).Count() ?? 0)</div>
                        <div class="text-muted">Hôm nay</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-number">@(thongtin?.Where(x => x.NgayCapNhat >= DateTime.Today.AddDays(-7)).Count() ?? 0)</div>
                        <div class="text-muted">Tuần này</div>
                    </div>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success-modern alert-modern">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger-modern alert-modern">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                </div>
            }

            <form method="get" asp-action="QuanLyTrangThaiSinhVien" class="row g-2 mb-4">
                <div class="col-md-4">
                    <input type="text" name="maSV" value="@ViewBag.MaSV" class="form-control search-box" placeholder="Nhập mã sinh viên..." />
                </div>
                <div class="col-md-4">
                    <select name="trangThaiLoc" class="form-select modern-form-control">
                        <option value="">-- Tất cả trạng thái --</option>
                        @if (trangthai != null)
                        {
                            @foreach (var tt in trangthai)
                            {
                                <option value="@tt.TrangThaiID" selected="@(ViewBag.TrangThaiLoc != null && ViewBag.TrangThaiLoc == tt.TrangThaiID ? "selected" : null)">
                                    @tt.TenTrangThai
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="modern-btn btn-filter me-2">
                        <i class="fas fa-filter me-1"></i> Lọc
                    </button>
                   @* <a href="@Url.Action("QuanLyTrangThaiSinhVien", "Admin")" class="modern-btn btn-reset">
                        <i class="fas fa-redo me-1"></i> Đặt lại
                    </a>*@
                </div>
            </form>

            @if (thongtin == null || !thongtin.Any())
            {
                <div class="alert alert-warning-modern alert-modern text-center">
                    <i class="fas fa-history fa-3x mb-3"></i>
                    <h5>Không có lịch sử trạng thái nào để hiển thị</h5>
                    <p>Dữ liệu sẽ được cập nhật khi có thay đổi trạng thái sinh viên</p>
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="table modern-table" id="statusTable">
                        <thead>
                            <tr>
                                <th><i class="fas fa-id-card me-1"></i>Mã SV</th>
                                <th><i class="fas fa-user me-1"></i>Họ tên</th>
                                <th><i class="fas fa-info-circle me-1"></i>Trạng thái</th>
                                <th><i class="fas fa-clock me-1"></i>Ngày cập nhật</th>
                                <th><i class="fas fa-cogs me-1"></i>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var thongTin in thongtin)
                            {
                                <tr>
                                    <td title="@thongTin.SinhVien?.MaSV">
                                        <span class="badge bg-primary rounded-pill">@thongTin.SinhVien?.MaSV</span>
                                    </td>
                                    <td title="@thongTin.SinhVien?.HoTen">
                                        <div class="text-ellipsis">
                                            <strong>@thongTin.SinhVien?.HoTen</strong>
                                        </div>
                                    </td>
                                    <td title="@thongTin.TrangThai?.TenTrangThai">
                                        <span class="badge badge-trangthai">@thongTin.TrangThai?.TenTrangThai</span>
                                    </td>
                                    <td title="@thongTin.NgayCapNhat.ToString("dd/MM/yyyy HH:mm")">
                                        @thongTin.NgayCapNhat.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="modern-btn btn-edit" data-bs-toggle="modal" data-bs-target="#modalSua_@thongTin.LichSuID" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form asp-action="XoaLichSuTrangThai" asp-route-id="@thongTin.LichSuID" method="post" style="display:inline;" onsubmit="return confirm('Xác nhận xóa lịch sử này?');">
                                                <button type="submit" class="modern-btn btn-delete" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
@if (thongtin != null)
{
        @foreach (var thongTin in thongtin)
        {
            <div class="modal fade modern-modal" id="modalSua_@thongTin.LichSuID" tabindex="-1" aria-labelledby="modalLabel_@thongTin.LichSuID" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="SuaTrangThaiSinhVien" asp-controller="Admin" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel_@thongTin.LichSuID">
                                    <i class="fas fa-edit me-2"></i>Sửa trạng thái sinh viên
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="LichSuID" value="@thongTin.LichSuID" />
                                <div class="modern-form-group">
                                    <label><i class="fas fa-user me-2"></i>Họ tên sinh viên</label>
                                    <input type="text" class="form-control modern-form-control" value="@thongTin.SinhVien?.HoTen" disabled />
                                </div>
                                <div class="modern-form-group">
                                    <label><i class="fas fa-info-circle me-2"></i>Trạng thái</label>
                                    <select name="TrangThaiID" class="form-select modern-form-control" required>
                                    @if (trangthai != null)
                                    @foreach (var tt in trangthai)
                                            {
                                                <option value="@tt.TrangThaiID" selected="@(thongTin.TrangThaiID == tt.TrangThaiID ? "true" : "false")">@tt.TenTrangThai</option>
                                            }
                                    </select>
                                </div>
                            </div>
                            <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                                <button type="submit" class="modern-btn btn-edit">
                                    <i class="fas fa-save me-2"></i>Lưu
                                </button>
                                <button type="button" class="modern-btn btn-reset" data-bs-dismiss="modal">
                                    <i class="fas fa-times me-2"></i>Hủy
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Animation for table rows
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.modern-table tbody tr');
            rows.forEach((row, index) => {
                row.style.animationDelay = `${index * 0.1}s`;
                row.classList.add('animate__animated', 'animate__fadeInUp');
            });
        });

        // Enhanced modal interactions
        document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
            button.addEventListener('click', function() {
                const targetModal = document.querySelector(this.getAttribute('data-bs-target'));
                if (targetModal) {
                    targetModal.classList.add('animate__animated', 'animate__zoomIn');
                }
            });
        });
    </script>
}
