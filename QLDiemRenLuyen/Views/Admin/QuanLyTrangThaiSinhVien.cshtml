@model List<QLDiemRenLuyen.Models.TrangThaiSinhVien>
@{
    ViewData["Title"] = "Quản lý trạng thái sinh viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var trangthai = ViewBag.trangthai as List<QLDiemRenLuyen.Models.CauHinh.CauHinhTrangThaiSinhVien> ?? new List<QLDiemRenLuyen.Models.CauHinh.CauHinhTrangThaiSinhVien>();
    //var thongtin = ViewBag.thongtin_TT as List<QLDiemRenLuyen.Models.TrangThaiSinhVien> ?? new List<QLDiemRenLuyen.Models.TrangThaiSinhVien>();
    var thongtin = Model ?? new List<TrangThaiSinhVien>();
}

<h3 class="text-center text-uppercase mb-3">LỊCH SỬ TRẠNG THÁI SINH VIÊN</h3>

<form method="get" asp-action="QuanLyTrangThaiSinhVien" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text" name="maSV" value="@ViewBag.MaSV" class="form-control" placeholder="Nhập mã sinh viên..." />
    </div>
    <div class="col-md-4">
        <select name="trangThaiLoc" class="form-select">
            <option value="">-- Tất cả trạng thái --</option>
            @foreach (var tt in trangthai)
            {
                <option value="@tt.TrangThaiID" selected="@(ViewBag.TrangThaiLoc != null && ViewBag.TrangThaiLoc == tt.TrangThaiID ? "selected" : "")">
                    @tt.TenTrangThai
                </option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary"><i class="fas fa-filter"></i> Lọc</button>
        <a href="@Url.Action("QuanLyTrangThaiSinhVien", "Admin")" class="btn btn-secondary ms-2">Đặt lại</a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-primary text-center">
        <tr>
            <th>Mã SV</th>
            <th>Họ tên</th>
            <th>Trạng thái</th>
            <th>Ngày cập nhật</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var thongTin in thongtin)
        {
            <tr>
                <td>@thongTin.SinhVien?.MaSV</td>
                <td>@thongTin.SinhVien?.HoTen</td>
                <td>
                    @thongTin.TrangThai?.TenTrangThai
                </td>

                @*<td class="text-center">@thongTin.NgayCapNhat.ToString("dd/MM/yyyy")</td>*@
                <td>@thongTin.NgayCapNhat</td>
                <td class="text-center">
                    <!-- Nút Sửa mở modal -->
                    <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalSua_@thongTin.LichSuID">Sửa</button>

                    <a asp-action="XoaLichSuTrangThai" asp-route-id="@thongTin.LichSuID" class="btn btn-danger btn-sm" onclick="return confirm('Xác nhận xóa?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@foreach (var thongTin in thongtin)
{
    <div class="modal fade" id="modalSua_@thongTin.LichSuID" tabindex="-1" aria-labelledby="modalLabel_@thongTin.LichSuID" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="SuaTrangThaiSinhVien" asp-controller="Admin" method="post">
                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title" id="modalLabel_@thongTin.LichSuID">Sửa trạng thái sinh viên</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="LichSuID" value="@thongTin.LichSuID" />
                        <div class="mb-3">
                            <label class="form-label">Họ tên sinh viên</label>
                            <input type="text" class="form-control" value="@thongTin.SinhVien?.HoTen" disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Trạng thái</label>
                            <select name="TrangThaiID" class="form-select" required>
                                @foreach (var tt in trangthai)
                                {
                                    <option value="@tt.TrangThaiID" selected="@(thongTin.TrangThaiID == tt.TrangThaiID ? "true" : "false")">@tt.TenTrangThai</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Lưu</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-2">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-2">@TempData["Error"]</div>
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}