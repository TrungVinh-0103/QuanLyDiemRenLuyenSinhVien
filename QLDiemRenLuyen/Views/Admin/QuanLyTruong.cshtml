@model List<QLDiemRenLuyen.Models.Truong>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý Trường";
}

<div class="container mt-4">
    <h4 class="text-primary mb-3">QUẢN LÝ TRƯỜNG</h4>

    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger">@TempData["Loi"]</div>
    }
    @if (TempData["ThanhCong"] != null)
    {
        <div class="alert alert-success">@TempData["ThanhCong"]</div>
    }

    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#modalThem">Thêm trường</button>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên trường</th>
                <th>Địa chỉ</th>
                <th>LogoURL</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].TenTruong</td>
                    <td>@Model[i].DiaChi</td>
                    <td>
                        @if (!string.IsNullOrEmpty(Model[i].LogoUrl))
                        {
                            <img src="@Model[i].LogoUrl" alt="Logo" style="height: 60px;" />
                        }
                        else
                        {
	                        <span class="text-muted">Chưa có logo</span>
                        }
                        </td>
                    <td>
                        <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalSua_@Model[i].TruongID">Sửa</button>
                        <form method="post" asp-action="XoaTruong" style="display:inline;">
                            <input type="hidden" name="id" value="@Model[i].TruongID" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Xác nhận xóa trường này?')">Xóa</button>
                        </form>
                    </td>
                </tr>

                
            }
        </tbody>
    </table>
    @for (int i = 0; i < Model.Count; i++)
    {
        <!-- Modal Sửa -->
        <div class="modal fade" id="modalSua_@Model[i].TruongID" tabindex="-1">
            <div class="modal-dialog">
                <form method="post" asp-action="SuaTruong">
                    <div class="modal-content">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title">Sửa trường</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="TruongID" value="@Model[i].TruongID" />
                            <div class="mb-3">
                                <label>Tên trường</label>
                                <input name="TenTruong" class="form-control" value="@Model[i].TenTruong" required />
                            </div>
                            <div class="mb-3">
                                <label>Địa chỉ</label>
                                <input name="DiaChi" class="form-control" value="@Model[i].DiaChi" />
                            </div>
                            <div class="mb-3">
                                <label>LogoURL</label>
                                <input name="LogoUrl" class="form-control" value="@Model[i].LogoUrl" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
                        </div>
                    </div>
                </form>
            </div>
            </div>
        }
</div>

<!-- Modal Thêm -->
<div class="modal fade" id="modalThem" tabindex="-1">
    <div class="modal-dialog">
        <form method="post" asp-action="ThemTruong">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Thêm trường mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Tên trường</label>
                        <input name="TenTruong" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Địa chỉ</label>
                        <input name="DiaChi" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>LogoURL</label>
                        <input name="LogoUrl" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}