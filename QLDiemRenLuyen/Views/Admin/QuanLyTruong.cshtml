@model List<QLDiemRenLuyen.Models.Truong>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý Trường";
}
<link href="~/css/QuanLyTruong.css" rel="stylesheet" />

<div class="admin-container">
    <div class="container-fluid">
        <div class="content-card">
            <h1 class="page-title">Quản Lý Trường</h1>

            <!-- Stats Card -->
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="stats-card">
                        <div class="stats-number">@(Model?.Count ?? 0)</div>
                        <div class="text-muted small">Tổng số trường</div>
                    </div>
                </div>
            </div>

            @if (TempData["ThanhCong"] != null)
            {
                <div class="alert alert-success-modern alert-modern">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["ThanhCong"]
                </div>
            }
            @if (TempData["Loi"] != null)
            {
                <div class="alert alert-danger-modern alert-modern">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Loi"]
                </div>
            }

            <!-- Actions -->
            <div class="row mb-3">
                <div class="col-md-12 text-end">
                    <button class="modern-btn btn-add" data-bs-toggle="modal" data-bs-target="#modalThem">
                        <i class="fas fa-plus me-1"></i>Thêm Trường
                    </button>
                </div>
            </div>

            <div class="table-container">
                <table class="table modern-table">
                    <thead>
                        <tr>
                            <th style="width: 5%;"><i class="fas fa-list-ol"></i> #</th>
                            <th style="width: 25%;"><i class="fas fa-university"></i> Tên trường</th>
                            <th style="width: 35%;"><i class="fas fa-map-marker-alt"></i> Địa chỉ</th>
                            <th style="width: 20%;"><i class="fas fa-image"></i> Logo</th>
                            <th style="width: 15%;"><i class="fas fa-cogs"></i> Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="fas fa-university fa-2x mb-2"></i>
                                    <div>Chưa có dữ liệu trường</div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td title="@Model[i].TenTruong">
                                        <strong class="text-ellipsis">@Model[i].TenTruong</strong>
                                    </td>
                                    <td title="@Model[i].DiaChi">
                                        <small class="text-ellipsis">@Model[i].DiaChi</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model[i].LogoUrl))
                                        {
                                            <div class="logo-container">
                                                <img src="@Model[i].LogoUrl" alt="Logo" class="logo-preview" />
                                                <a href="@Model[i].LogoUrl" target="_blank" class="logo-link">Xem logo</a>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">
                                                <i class="fas fa-image"></i> Chưa có logo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="modern-btn btn-edit" data-bs-toggle="modal" data-bs-target="#modalSua_@Model[i].TruongID" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form method="post" asp-action="XoaTruong" style="display:inline;" onsubmit="return confirm('Xác nhận xóa trường này?')">
                                                <input type="hidden" name="id" value="@Model[i].TruongID" />
                                                <button type="submit" class="modern-btn btn-delete" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm -->
<div class="modal fade modern-modal" id="modalThem" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <form method="post" asp-action="ThemTruong">
            <div class="modal-content">
                <div class="modal-header" style="background: linear-gradient(135deg, #4CAF50, #45a049);">
                    <h5 class="modal-title">
                        <i class="fas fa-university me-2"></i>Thêm Trường Mới
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-university me-1"></i>Tên trường</label>
                                <input name="TenTruong" class="form-control modern-form-control" required placeholder="Nhập tên trường" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label><i class="fas fa-map-marker-alt me-1"></i>Địa chỉ</label>
                                <input name="DiaChi" class="form-control modern-form-control" placeholder="Nhập địa chỉ trường" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="modern-form-group">
                                <label><i class="fas fa-image me-1"></i>Logo URL</label>
                                <input name="LogoUrl" class="form-control modern-form-control" placeholder="Nhập đường dẫn logo" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                    <button type="submit" class="modern-btn btn-add">
                        <i class="fas fa-save me-1"></i>Thêm Mới
                    </button>
                    <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Hủy
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal Sửa -->
@if (Model != null)
{
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="modal fade modern-modal" id="modalSua_@Model[i].TruongID" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <form method="post" asp-action="SuaTruong">
                    <div class="modal-content">
                        <div class="modal-header" style="background: linear-gradient(135deg, #FF9800, #F57C00);">
                            <h5 class="modal-title">
                                <i class="fas fa-edit me-2"></i>Sửa Trường
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="TruongID" value="@Model[i].TruongID" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-university me-1"></i>Tên trường</label>
                                        <input name="TenTruong" class="form-control modern-form-control" value="@Model[i].TenTruong" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-map-marker-alt me-1"></i>Địa chỉ</label>
                                        <input name="DiaChi" class="form-control modern-form-control" value="@Model[i].DiaChi" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="modern-form-group">
                                        <label><i class="fas fa-image me-1"></i>Logo URL</label>
                                        <input name="LogoUrl" class="form-control modern-form-control" value="@Model[i].LogoUrl" placeholder="Nhập đường dẫn logo" />
                                        @if (!string.IsNullOrEmpty(Model[i].LogoUrl))
                                        {
                                            <small class="text-muted mt-1 d-block">Logo hiện tại: <a href="@Model[i].LogoUrl" target="_blank">Xem logo</a></small>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer" style="background: #f8f9fa; border: none; padding: 15px 20px;">
                            <button type="submit" class="modern-btn btn-edit">
                                <i class="fas fa-save me-1"></i>Cập Nhật
                            </button>
                            <button type="button" class="modern-btn" style="background: #6c757d; color: white;" data-bs-dismiss="modal">
                                <i class="fas fa-times me-1"></i>Hủy
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validation
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.style.borderColor = '#dc3545';
                        isValid = false;
                    } else {
                        field.style.borderColor = '#43e97b';
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                }
            });
        });

        // Logo URL validation
        document.querySelectorAll('input[name="LogoUrl"]').forEach(input => {
            input.addEventListener('blur', function() {
                if (this.value) {
                    console.log('Logo URL entered:', this.value);
                }
            });
        });
    </script>
}