@model List<QLDiemRenLuyen.Models.PhieuDanhGia>
@{
    Layout = "~/Views/Shared/_LayoutHoiDong.cshtml";
    ViewData["Title"] = "Danh sách phiếu chờ duyệt";
}
<link href="~/css/dsPhieu_HD.css" rel="stylesheet" />
<div class="row mb-4">
    <div class="col-12">
        <div class="page-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; padding: 20px; color: white; text-align: center; animation: slideInDown 0.6s ease;">
            <h4 class="text-uppercase mb-0">
                <i class="fas fa-clipboard-list me-2"></i>
                DANH SÁCH PHIẾU CHỜ DUYỆT
            </h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-custom table-hover">
                <thead>
                    <tr class="text-center">
                        <th><i class="fas fa-user me-2"></i>Sinh viên</th>
                        <th><i class="fas fa-users me-2"></i>Lớp</th>
                        <th><i class="fas fa-calendar me-2"></i>Học kỳ</th>
                        <th><i class="fas fa-calendar-alt me-2"></i>Ngày gửi</th>
                        <th><i class="fas fa-cogs me-2"></i>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var p in Model)
                        {
                            <tr style="animation: fadeInUp 0.6s ease; animation-delay: @(Model.IndexOf(p) * 0.1)s;">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle text-primary me-2"></i>
                                        @p.SinhVien?.HoTen
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">@p.SinhVien?.Lop?.TenLop</span>
                                </td>
                                <td>@p.HocKy?.TenHocKy - @p.HocKy?.NamHoc</td>
                                <td class="text-center">
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        @p.NgayLapPhieu.ToString("dd/MM/yyyy")
                                    </small>
                                </td>
                                <td class="text-center">
                                    <a asp-action="DuyetPhieu" asp-route-id="@p.PhieuDanhGiaID"
                                       class="btn btn-custom-success btn-sm text-white">
                                        <i class="fas fa-check me-1"></i>Duyệt
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div style="color: #6c757d;">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p class="mb-0">Không có phiếu nào cần duyệt</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
