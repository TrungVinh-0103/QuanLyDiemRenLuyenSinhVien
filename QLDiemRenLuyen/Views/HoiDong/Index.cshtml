@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutHoiDong.cshtml";
    var hd = ViewBag.GiaoVien as QLDiemRenLuyen.Models.NhanVien;
}
<link rel="stylesheet" href="~/css/GVCN.css" />
<div class="row">
    <div class="col-12">
        <div class="welcome-card p-4 mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; color: white; box-shadow: 0 10px 40px rgba(0,0,0,0.1); animation: slideInDown 0.6s ease;">
            <h3 class="text-uppercase text-center mb-3">
                <i class="fas fa-users-cog me-2"></i>
                Chào mừng Hội đồng: @hd?.HoTen
            </h3>
            <div class="text-center">
                <i class="fas fa-balance-scale fa-3x mb-3" style="opacity: 0.8;"></i>
                @* <p class="mb-0">Hệ thống quản lý và duyệt phiếu đánh giá rèn luyện sinh viên</p> *@
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="info-card h-100" style="background: white; border-radius: 15px; padding: 30px; box-shadow: 0 10px 40px rgba(0,0,0,0.1); border-left: 5px solid #667eea; animation: slideInLeft 0.8s ease;">
            <h5 class="mb-4" style="color: #667eea; font-weight: 600;">
                <i class="fas fa-info-circle me-2"></i>
                Thông tin hội đồng
            </h5>
            <div class="info-item mb-3">
                <strong style="color: #495057;">
                    <i class="fas fa-user me-2 text-danger"></i>
                    Họ tên:
                </strong>
                <span class="ms-2" style="color: #6c757d;">@hd?.HoTen</span>
            </div>
            <div class="info-item mb-3">
                <strong style="color: #495057;">
                    <i class="fas fa-university me-2 text-warning"></i>
                    Khoa:
                </strong>
                <span class="ms-2" style="color: #6c757d;">@hd?.Khoa?.TenKhoa</span>
            </div>
            <div class="info-item">
                <strong style="color: #495057;">
                    <i class="fas fa-briefcase me-2 text-info"></i>
                    Vai trò:
                </strong>
                <span class="ms-2 badge bg-primary">Hội đồng</span>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="quick-actions h-100" style="background: white; border-radius: 15px; padding: 30px; box-shadow: 0 10px 40px rgba(0,0,0,0.1); border-left: 5px solid #a8edea; animation: slideInRight 0.8s ease;">
            <h5 class="mb-4" style="color: #11998e; font-weight: 600;">
                <i class="fas fa-tasks me-2"></i>
                Công việc chính
            </h5>
            <div class="d-grid gap-3">
                <a href="/HoiDong/DanhSachPhieu" class="btn btn-custom-primary btn-lg text-white">
                    <i class="fas fa-clipboard-list me-2"></i>
                    Duyệt phiếu đánh giá
                </a>
                <a href="/HoiDong/LichSuPhieu" class="btn btn-custom-success btn-lg text-white">
                    <i class="fas fa-history me-2"></i>
                    Xem lịch sử duyệt
                </a>
            </div>
        </div>
    </div>
</div>


