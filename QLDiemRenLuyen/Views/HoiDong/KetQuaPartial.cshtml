@model List<QLDiemRenLuyen.Models.PhieuDanhGia>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center">Không tìm thấy kết quả phù hợp.</div>
}
else
{
    <table class="table table-bordered text-center">
        <thead class="table-success">
            <tr>
                <th>#</th>
                <th>Họ tên</th>
                <th>Mã SV</th>
                <th>Lớp</th>
                <th>Học kỳ</th>
                <th>Năm học</th>
                <th>Điểm HĐ duyệt</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].SinhVien?.HoTen</td>
                    <td>@Model[i].SinhVien?.MaSV</td>
                    <td>@Model[i].SinhVien?.Lop?.TenLop</td>
                    <td>@Model[i].HocKy?.TenHocKy</td>
                    <td>@Model[i].HocKy?.NamHoc</td>
                    <td class="fw-bold">@Model[i].TongDiemHoiDongDuyet</td>
                </tr>
            }
        </tbody>
    </table>
}
