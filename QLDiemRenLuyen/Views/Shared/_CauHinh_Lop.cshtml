<h4>Quản lý Lớp</h4>
<form method="post" asp-action="ThemLop">
    <div class="row mb-2">
        <div class="col-md-4"><input name="TenLop" class="form-control" placeholder="Tên lớp" required /></div>
        <div class="col-md-4">
            <select name="KhoaID" class="form-select">
                @foreach (var k in ViewBag.Khoa)
                {
                    <option value="@k.KhoaID">@k.TenKhoa</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <select name="NienKhoaID" class="form-select">
                @foreach (var nk in ViewBag.NienKhoa)
                {
                    <option value="@nk.NienKhoaID">@nk.TenNienKhoa</option>
                }
            </select>
        </div>
    </div>
    <button class="btn btn-primary">Thêm Lớp</button>
</form>

<table class="table table-bordered">
    <thead class="table-warning">
        <tr><th>ID</th><th>Lớp</th><th>Khoa</th><th>Niên khóa</th></tr>
    </thead>
    <tbody>
        @foreach (var l in ViewBag.Lop)
        {
            <tr>
                <td>@l.LopID</td>
                <td>@l.TenLop</td>
                <td>@l.Khoa?.TenKhoa</td>
                <td>@l.NienKhoa?.TenNienKhoa</td>
            </tr>
        }
    </tbody>
</table>
