<h5 class="text-primary">Quản lý Nhóm tiêu chí</h5>
<form method="post" asp-action="ThemNhomTieuChi" asp-controller="Admin">
    <div class="mb-2">
        <input type="text" name="TenNhom" class="form-control" placeholder="Tên nhóm tiêu chí" required />
    </div>
    <div class="mb-2">
        <input type="number" name="DiemToiDa" class="form-control" placeholder="Điểm tối đa" required />
    </div>
    <div class="mb-2">
        <textarea name="MoTa" class="form-control" placeholder="Mô tả nhóm"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Thêm nhóm tiêu chí</button>
</form>

<table class="table table-bordered mt-3">
    <thead class="table-warning">
        <tr>
            <th>#</th>
            <th>Tên nhóm</th>
            <th>Điểm tối đa</th>
            <th>Mô tả</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.NhomTieuChi)
        {
            <tr>
                <td>@item.NhomTieuChiID</td>
                <td>@item.TenNhom</td>
                <td>@item.DiemToiDa</td>
                <td>@item.MoTa</td>
            </tr>
        }
    </tbody>
</table>
