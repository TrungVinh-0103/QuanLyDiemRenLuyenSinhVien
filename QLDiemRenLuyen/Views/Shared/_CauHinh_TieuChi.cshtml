<h5 class="text-primary mt-4">Thêm tiêu chí vào nhóm</h5>
<form method="post" asp-action="ThemTieuChi" asp-controller="Admin">
    <div class="mb-2">
        <select name="NhomTieuChiID" class="form-select" required>
            <option value="">-- Chọn nhóm tiêu chí --</option>
            @foreach (var nhom in ViewBag.NhomTieuChi)
            {
                <option value="@nhom.NhomTieuChiID">@nhom.TenNhom</option>
            }
        </select>
    </div>
    <div class="mb-2">
        <input type="text" name="TenTieuChi" class="form-control" placeholder="Tên tiêu chí" required />
    </div>
    <div class="mb-2">
        <input type="number" name="DiemToiDa" class="form-control" placeholder="Điểm tối đa" required />
    </div>
    <div class="form-check mb-2">
        <input type="checkbox" class="form-check-input" name="YeuCauMinhChung" value="true" id="chkMC" />
        <label class="form-check-label" for="chkMC">Yêu cầu minh chứng</label>
    </div>
    <button type="submit" class="btn btn-success">Thêm tiêu chí</button>
</form>

<table class="table table-bordered mt-3">
    <thead class="table-info">
        <tr>
            <th>#</th>
            <th>Thuộc nhóm</th>
            <th>Tên tiêu chí</th>
            <th>Điểm tối đa</th>
            <th>Yêu cầu minh chứng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tc in ViewBag.TieuChi)
        {
            <tr>
                <td>@tc.TieuChiID</td>
                <td>@tc.NhomTieuChi?.TenNhom</td>
                <td>@tc.TenTieuChi</td>
                <td>@tc.DiemToiDa</td>
                <td>@(tc.YeuCauMinhChung ? "✔️" : "❌")</td>
            </tr>
        }
    </tbody>
</table>
