<h4>Quản lý Trạng thái học tập</h4>
<form method="post" asp-action="ThemTrangThaiHocTap">
    <div class="row mb-2">
        <div class="col-md-4"><input name="TenTrangThai" class="form-control" placeholder="VD: Đang học" required /></div>
        <div class="col-md-6"><input name="MoTa" class="form-control" placeholder="Mô tả" /></div>
        <div class="col-md-2"><button class="btn btn-primary w-100">Thêm</button></div>
    </div>
</form>
<table class="table table-bordered">
    <thead class="table-warning"><tr><th>ID</th><th>Trạng thái</th><th>Mô tả</th></tr></thead>
    <tbody>
        @foreach (var t in ViewBag.TrangThaiHocTap)
        {
            <tr><td>@t.TrangThaiID</td><td>@t.TenTrangThai</td><td>@t.MoTa</td></tr>
        }
    </tbody>
</table>
