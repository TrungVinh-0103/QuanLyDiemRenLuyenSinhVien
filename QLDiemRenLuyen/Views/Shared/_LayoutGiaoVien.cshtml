<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CHỦ NHIỆM</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/GVCN.css" />
</head>
<body>
    <!-- Floating Background Elements -->
    <div class="floating-elements">
        <div class="floating-circle"></div>
        <div class="floating-circle"></div>
        <div class="floating-circle"></div>
    </div>

    <!-- Header -->
    <header class="header-gradient text-white py-4">
        <div class="container">
            <h5 class="school-title mb-0">
                <i class="fas fa-chalkboard-teacher me-3"></i>
                CHỦ NHIỆM - TRƯỜNG ĐẠI HỌC NAM CẦN THƠ
            </h5>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top" id="mainNavbar">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <i class="fas fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" asp-controller="GiaoVien" asp-action="Index">
                            <i class="fas fa-home me-2"></i>Trang chính
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" asp-controller="GiaoVien" asp-action="DanhSachPhieuDanhGia">
                            <i class="fas fa-clipboard-check me-2"></i>Duyệt phiếu đánh giá
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" asp-controller="GiaoVien" asp-action="LichSuPhieuDanhGia">
                            <i class="fas fa-history me-2"></i>Lịch sử duyệt
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom logout-btn" href="/TaiKhoan/DangXuat">
                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/GVCN.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
